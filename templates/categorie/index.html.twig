{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    {% if categories is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for une_categorie in categories %}
                    <tr>
                        <td>
    <a href="{{ path('ma_categorie', {'id': une_categorie.id}) }}">
                            {{ une_categorie.nom }}
                            </a>
                        </td>
                        <td>{{ une_categorie.description }}</td>
                        <td>
                            <a href="{{ path('delete_categorie', {'id':une_categorie.id}) }}">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Il n'y a aucune catégorie</p>
    {% endif %}

    <h2>Ajouter une catégorie</h2>
    {{ form(form_categorie_ajout) }}
{% endblock %}
